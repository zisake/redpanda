{
    "apiVersion": "0.0.1",
    "swaggerVersion": "1.2",
    "basePath": "/v1",
    "resourcePath": "/brokers",
    "produces": [
        "application/json"
    ],
    "apis": [
        {
            "path": "/v1/brokers",
            "operations": [
                {
                    "method": "GET",
                    "summary": "Get a list of brokers",
                    "type": "array",
                    "items": {
                        "type": "broker"
                    },
                    "nickname": "get_brokers",
                    "produces": [
                        "application/json"
                    ],
                    "parameters": []
                }
            ]
        },
        {
            "path": "/v1/brokers/{id}",
            "operations": [
                {
                    "method": "GET",
                    "summary": "Get broker",
                    "type": "broker",
                    "nickname": "get_broker",
                    "produces": [
                        "application/json"
                    ],
                    "parameters": [
                        {
                            "name": "id",
                            "in": "path",
                            "required": true,
                            "type": "long"
                        }
                    ]
                }
            ]
        },
        {
            "path": "/v1/brokers/{id}/decommission",
            "operations": [
                {
                    "method": "PUT",
                    "summary": "decommission broker",
                    "type": "void",
                    "nickname": "decommission",
                    "produces": [
                        "application/json"
                    ],
                    "parameters": [
                        {
                            "name": "id",
                            "in": "path",
                            "required": true,
                            "type": "long"
                        }
                    ]
                }
            ]
        },
        {
            "path": "/v1/brokers/{id}/recommission",
            "operations": [
                {
                    "method": "PUT",
                    "summary": "recommission broker",
                    "type": "void",
                    "nickname": "recommission",
                    "produces": [
                        "application/json"
                    ],
                    "parameters": [
                        {
                            "name": "id",
                            "in": "path",
                            "required": true,
                            "type": "long"
                        }
                    ]
                }
            ]
        }
    ],
    "models": {
        "broker": {
            "id": "broker",
            "description": "Broker information",
            "properties": {
                "node_id": {
                    "type": "long",
                    "description": "node id"
                },
                "num_cores": {
                    "type": "long",
                    "description": "cores"
                },
                "membership_status": {
                    "type": "string",
                    "description": "Broker membership status"
                }
            }
        }
    }
